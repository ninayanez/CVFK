body 
  font-family monaco!important
  font-size 12px
  letter-spacing 1.8px
  margin 0
  padding 0
  overflow hidden

#cvs 
  background #FFDDE9

#prompt
  line-height 20px
  border 1px solid rgba(38, 182, 253, 0.91)
  border-radius 3px
  background rgba(95, 238, 241, 0.27)
  padding 0px 6px
  width  320px

#prompt input 
  outline  none
  color blue
  font-family monaco!important
  font-size  12px
  border  1px solid rgba(38, 182, 253, 0.91)
  border-radius  3px
  background  rgba(95, 238, 241, 0.27)
  letter-spacing  1.8px
  border none
  background transparent

#prompt input:focus 
  outline none
  border none

#prompt span 
  margin-left 20px
  color black

#prompt 
  position fixed
  left 50%
  top 50%
  margin-left -210px
  margin-top -40px
  transition opacity 0.15s linear
